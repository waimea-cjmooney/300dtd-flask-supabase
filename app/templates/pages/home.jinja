{% extends 'pages/base.jinja' %}

{% block title %} Hello World! {% endblock %}

{% block content %} 
    <section id="hero">
        <h1>Hello!! X3</h1> 
    </section>

    <section id="things">
        {% for thing in things %}

            <article>
                <header>
                    {{ thing["name"] }}
                </header>

                <p>
                    {{ thing["description"] }}
                    <br>

                    Cost: ${{ thing["cost"] }} 
                </p>

                <footer>
                    <a href="/thing/{{ thing['id'] }}">More...</a>
                    <a href="/delete/{{ thing['id'] }}">Delete</a>
                </footer>

            </article>

        {% endfor %}
    </section>
{% endblock %}